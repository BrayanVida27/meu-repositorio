CREATE TABLE PRODUTO(
    IDPROD INT PRIMARY KEY,
    NOMEPROD VARCHAR(100) NOT NULL,
    PRECOPROD DECIMAL(8,2) NOT NULL,
    PESOPROD DECIMAL(8,2)
);
--UMA PADARIA
