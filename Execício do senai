INSERT INTO PRODUTO VALUES(3, 'CAFÉ', 12,50);


CREATE TABLE CLIENTE(
    IDCLIENTE INT PRIMARY KEY,
    NOMECLIENTE VARCHAR(100) NOT NULL,
    CIDADE VARCHAR(100) NOT NULL
);

INSERT INTO CLIENTE VALUES(1, 'Mia santos', 'capivari de baixo');
INSERT INTO CLIENTE VALUES(33, 'Maria almeira', 'tubarão');
INSERT INTO CLIENTE VALUES(43, 'Manuel silva', 'tubarão');
INSERT INTO CLIENTE VALUES(134, 'Miguel correira', 'forenopoles');
INSERT INTO CLIENTE VALUES(234, 'catarina rocha', 'laguna' );

ALTER TABLE CLIENTE ADD EMAIL VARCHAR(100);

ALTER TABLE PRODUTO ADD ESTOQUE INT;

UPDATE CLIENTE
SET NOMECLIENTE = 'Mia santos'
WHERE CIDADE = 'Brasília';

UPDATE PRODUTO
SET PESOPROD = PRECOPROD * 1.10
WHERE peso > 10

DELETE FROM PRODUTO
WHERE IDPROD = 1;

DELETE FROM CLIENTE
WHERE CIDADE = 'tubarão';

SELECT * FROM PRODUTO ORDER BY PRECOPROD;

SELECT * FROM CLIENTE ORDER BY NOMECLIENTE DESC;

SELECT SUM(PRECOPROD) FROM PRODUTO;

SELECT CIDADE, COUNT( * ) AS TOTAL_CLIENTES FROM CLIENTE GROUP BY CIDADE;
